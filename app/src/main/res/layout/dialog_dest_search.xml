<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4">
    <LinearLayout
        android:id="@+id/panelPlacesSearchBox"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <EditText
            android:id="@+id/txtSearchPlaces"
            android:layout_width="0px"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_gravity="center_vertical"
            android:background="@android:drawable/editbox_background_normal"
            android:hint="جستجوی مکان ها"
            android:singleLine="true"
            android:layout_centerHorizontal="true"
            android:textColor="#0000ff"
            android:ems="10" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btnChooseOnTheMap"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="8dp">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="7dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_from_map"
            android:background="@null" />
        <TextView
            android:id="@+id/lblFare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="انتخاب نقطه مشخص شده در نقشه"
            android:textStyle="bold"
            android:textSize="17sp"
            />
    </LinearLayout>
    <ExpandableListView
        android:id="@+id/lstDestSearchResults"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:groupIndicator="@null"/>
</LinearLayout>
